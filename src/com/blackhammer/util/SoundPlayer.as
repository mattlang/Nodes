package com.blackhammer.util {    import flash.events.Event;    import flash.media.Sound;    import flash.media.SoundChannel;    public class SoundPlayer {                private var _sound:Sound;        private var _chan:SoundChannel;        private var _isSoundPlaying:Boolean;        public function SoundPlayer():void {        }		public function setSound(sound:Sound):void{			_sound = sound;		}        public function play():void        {            if(!_isSoundPlaying)            {                _chan = _sound.play();                _chan.addEventListener(Event.SOUND_COMPLETE, handleSoundComplete,false,0,true);                _isSoundPlaying = true;            }        }        public function stop():void        {            if(_isSoundPlaying)            {                _chan.stop();				_chan.removeEventListener(Event.SOUND_COMPLETE, handleSoundComplete);                _isSoundPlaying = false;            }        }        private function handleSoundComplete(ev:Event):void        {            _isSoundPlaying = false;			_chan.removeEventListener(Event.SOUND_COMPLETE, handleSoundComplete);        }		public function get isSoundPlaying():Boolean{			return _isSoundPlaying;		}				public function kill():void{			stop();			_sound = null;		}    }}
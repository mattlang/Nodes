package com.blackhammer.util{		import flash.events.*;	import flash.media.*	    //import flash.utils.getTimer;	import com.greensock.TweenMax;	import flash.media.SoundTransform;		public class SoundLoop {		private var _loopedSound:Sound		private var _loopedChannel:SoundChannel				public function SoundLoop() {		}				private function restartSound (evt):void{			_loopedChannel = _loopedSound.play();			_loopedChannel.addEventListener(Event.SOUND_COMPLETE, restartSound, false, 0, true);		}				public function playSound ():void{			var trans:SoundTransform = new SoundTransform(1, 0);			//_loopedChannel.soundTransform = trans;			_loopedChannel = _loopedSound.play();			_loopedChannel.addEventListener(Event.SOUND_COMPLETE, restartSound, false, 0, true);		}				public function fadeOutSound(fadeTime:Number):void{			TweenMax.to(_loopedChannel,fadeTime,{volume:0,onComplete:stopSound});		}				public function stopSound ():void{			_loopedChannel.stop();			_loopedChannel.removeEventListener(Event.SOUND_COMPLETE, restartSound);		}				public function setSound (daSound):void{			_loopedSound = daSound			//trace(_loopedSound is Sound)		}				public function kill():void{			_loopedChannel.stop();			_loopedChannel.removeEventListener(Event.SOUND_COMPLETE, restartSound);		}			}}